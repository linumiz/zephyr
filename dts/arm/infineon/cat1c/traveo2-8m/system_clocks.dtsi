#define DIV_8_BIT    00
#define DIV_16_BIT    01
#define DIV_16_5_BIT    02
#define DIV_24_5_BIT    03

#include <dt-bindings/clock/ifx_clock_source_def.h>

/ {
	clocks {
		clk_wco: clk_wco{
			#clock-cells = <0>;
			compatible = "fixed-clock";
			status = "disabled";
		};

		clk_ilo0: clk_ilo0 {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <32768>;
			status = "okay";
		};

		clk_ilo1: clk_ilo1 {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <32768>;
			status = "okay";
		};

		path-source {
			#address-cells = <1>;
			#size-cells = <0>;

			/* imo */
			clk_imo: clk_imo@0 {
				#clock-cells = <0>;
				compatible = "fixed-clock";
				reg = <0>;
				clock-frequency = <8000000>;
				status = "okay";
			};

			clk_ext: clk_ext@1 {
				#clock-cells = <0>;
				compatible = "fixed-clock";
				reg = <1>;
				status = "disabled";
			};

			clk_eco: clk_eco@2 {
				#clock-cells = <0>;
				compatible = "fixed-clock";
				reg = <2>;
				status = "disabled";
			};

			clk_althf: clk_althf@3 {
				#clock-cells = <0>;
				compatible = "fixed-clock";
				reg = <3>;
				status = "disabled";
			};
		};

		fll {
			#address-cells = <1>;
			#size-cells = <0>;

			/* fll */
			fll: fll@0 {
				#clock-cells = <0>;
				reg = <0>;
				compatible = "fixed-clock";
				clock-frequency = <96000000>;
				status = "disabled";
			};
		};

		pll {
			#address-cells = <1>;
			#size-cells = <0>;

			pll0: pll400@1 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-pll";
				reg = <1>;
				clocks = <&clk_eco>;
				p-div = <43>;
				q-div = <1>;
				frac-div = <0xC00000>;
				output-div = <2>;
				status = "disabled";
			};

			pll1: pll400@2 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-pll";
				reg = <2>;
				clocks = <&clk_eco>;
				p-div = <36>;
				q-div = <3>;
				frac-div = <0xDD2F1A>;
				output-div = <2>;
				status = "disabled";
			};

			pll2: pll@3 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-pll";
				reg = <3>;
				clocks = <&clk_eco>;
				p-div = <25>;
				q-div = <1>;
				output-div = <2>;
				status = "disabled";
			};

			pll3: pll@4 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-pll";
				reg = <4>;
				clocks = <&clk_eco>;
				p-div = <25>;
				q-div = <1>;
				output-div = <2>;
				status = "disabled";
			};
		};

		direct {
			#address-cells = <1>;
			#size-cells = <0>;
			clk_direct0: clk_direct@5 {
				#clock-cells = <0>;
				compatible = "fixed-clock";
				reg = <5>;
				clocks = <&clk_eco>;
				status = "disabled";
			};
		};


		clk_hf {
			#address-cells = <1>;
			#size-cells = <0>;

			clk_hf0: clk_hf@0 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-hf-clock";
				reg = <0>;
				clocks = <&pll2>;
				divider = <2>;
				status = "okay";
			};

			clk_hf1: clk_hf@1 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-hf-clock";
				reg = <1>;
				clocks = <&pll0>;
				divider = <1>;
				status = "disabled";
			};

			clk_hf2: clk_hf@2 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-hf-clock";
				reg = <2>;
				clocks = <&pll2>;
				divider = <2>;
				status = "disabled";
			};

			clk_hf3: clk_hf@3 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-hf-clock";
				reg = <3>;
				clocks = <&pll2>;
				divider = <2>;
				status = "disabled";
			};

			clk_hf4: clk_hf@4 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-hf-clock";
				reg = <4>;
				clocks = <&pll1>;
				divider = <1>;
				status = "disabled";
			};

			clk_hf5: clk_hf@5 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-hf-clock";
				reg = <5>;
				clocks = <&pll1>;
				divider = <1>;
				status = "disabled";
			};

			clk_hf6: clk_hf@6 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-hf-clock";
				reg = <6>;
				clocks = <&pll2>;
				divider = <1>;
				status = "disabled";
			};

			clk_hf7: clk_hf@7 {
				#clock-cells = <0>;
				compatible = "infineon,cat1-hf-clock";
				reg = <7>;
				clocks = <&clk_direct0>;
				divider = <1>;
				status = "disabled";
			};
		};
	};
};
