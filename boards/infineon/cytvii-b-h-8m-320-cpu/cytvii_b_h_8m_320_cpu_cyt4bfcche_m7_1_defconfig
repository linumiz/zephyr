# General configuration
CONFIG_ARM_MPU=y
CONFIG_HW_STACK_PROTECTION=y
CONFIG_CACHE_MANAGEMENT=y

# Enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable UART driver
CONFIG_SERIAL=y

# Enable GPIO driver
CONFIG_GPIO=y

# Enable clock controller
CONFIG_CLOCK_CONTROL=y

# Enable the M7_1 core board configuration
CONFIG_BOARD_CYTVII_B_H_8M_320_CPU_CYT4BFCCHE_M7_1=y

# Disable the M0+ core board configuration
CONFIG_BOARD_CYTVII_B_H_8M_320_CPU_CYT4BFCCHE_M0P=n
