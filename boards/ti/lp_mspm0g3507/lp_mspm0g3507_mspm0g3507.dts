/dts-v1/;

#include <ti/mspm0g1x0x_g3x0x/mspm0g3507.dtsi>
#include <ti/mspm0g1x0x_g3x0x/mspm0g350x-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/adc/mspm0_adc.h>

/ {
	model = "TI LP_MSPM0G3507/MSPM0G3507";
	compatible = "ti,mspm0g3507";

	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		led3 = &led3;
		sw0 = &btn0;
		sw1 = &btn1;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpiob 22 GPIO_ACTIVE_HIGH>;
			label = "Blue LED";
		};
		led1: led_1 {
			gpios = <&gpiob 26 GPIO_ACTIVE_HIGH>;
			label = "Red LED";
		};
		led2: led_2 {
			gpios = <&gpiob 27 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};
		led3: led_3 {
			gpios = <&gpioa 0 GPIO_ACTIVE_LOW>;
			label = "Red LED";
		};
	};

	keys {
		compatible = "gpio-keys";
		btn0: btn_0 {
			gpios = <&gpiob 21 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Switch 3";
			zephyr,code = <INPUT_KEY_0>;
		};
		btn1: btn_1 {
			gpios = <&gpioa 18 (GPIO_ACTIVE_HIGH)>;
			label = "Switch 2";
			zephyr,code = <INPUT_KEY_1>;
		};
	};
};

&adc0 {
	ti,clk-source = <MSP_ADC_CLOCK_ULPCLK>;
	ti,clk-divider = <8>;
	ti,clk-range = <MSP_ADC_CLOCK_RANGE_24TO32>;
	vref-mv = <2500>;
	pinctrl-0 = <&adc0_pa27>;
	pinctrl-names = "default";
	status = "disabled";
};

&adc1 {
	ti,clk-source = <MSP_ADC_CLOCK_ULPCLK>;
	ti,clk-divider = <8>;
	ti,clk-range = <MSP_ADC_CLOCK_RANGE_24TO32>;
	vref-mv = <2500>;
	pinctrl-0 = <&adc1_pa15>;
	pinctrl-names = "default";
	status = "disabled";
};

&cpu0 {
	clock-frequency = <DT_FREQ_M(80)>;
};

&clkmux {
	clock-source = <&pll>;
	clock-frequency = <DT_FREQ_M(80)>;
	uclk-div = <2>;
};

&gpioa {
	status = "okay";
};

&gpiob {
	status = "okay";
};

&i2c0 {
	status = "okay";
	pinctrl-0 = <&i2c0_scl_pa31 &i2c0_sda_pa28>;
	pinctrl-names = "default";
};

&i2c1 {
	status = "okay";
	pinctrl-0 = <&i2c1_scl_pb2 &i2c1_sda_pb3>;
	pinctrl-names = "default";
};

&rtc0 {
	status = "okay";
};

&spi1 {
	pinctrl-0 = <&spi1_sclk_pb9 &spi1_pico_pb8 &spi1_poci_pb7 &spi1_cs0_pb6>;
	pinctrl-names = "default";
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	ads1310: ads1310@0 {
		compatible = "ti,ads131m02";
		reg = <0>;
		#io-channel-cells = <1>;
		drdy-gpios = <&gpiob 18 (GPIO_ACTIVE_LOW)>;
		spi-max-frequency = <8000000>;
	};
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_tx_pa10 &uart0_rx_pa11>;
	pinctrl-names = "default";
};
