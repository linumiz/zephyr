/dts-v1/;

#include <ti/mspm0l122x_l222x/mspm0l2228.dtsi>
#include <ti/mspm0l122x_l222x/mspm0l2228-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/adc/mspm0_adc.h>
#include <zephyr/dt-bindings/pwm/pwm.h>

/ {
	model = "TI LP_MSPM0L2228/MSPM0L2228";
	compatible = "ti,mspm0l2228";

	aliases {
		led0 = &led0;
		led1 = &led1;
		sw0 = &btn0;
		sw1 = &btn1;
		pwm-led0 = &pwm_led;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &nvm;
		zephyr,flash-controller = &flashctl;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpiob 10 GPIO_ACTIVE_HIGH>;
			label = "RED LED";
		};
		led1: led_1 {
			gpios = <&gpiob 9 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};
	};

	pwmleds {
		compatible = "pwm-leds";

		pwm_led: pwm_led {
			pwms = <&pwm4 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
	};

	keys {
		compatible = "gpio-keys";
		btn0: btn_0 {
			gpios = <&gpiob 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Switch 3";
			zephyr,code = <INPUT_KEY_0>;
		};
		btn1: btn_1 {
			gpios = <&gpioa 18 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Switch 2";
			zephyr,code = <INPUT_KEY_1>;
		};
	};
};

&cpu0 {
	clock-frequency = <DT_FREQ_M(32)>;
};

&clkmux {
	clock-source = <&sysosc>;
	clock-frequency = <DT_FREQ_M(32)>;
};

&nvm {
	status = "okay";
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x8000>;
		};
		slot0_partition: partition@8000 {
			label = "image-0";
			reg = <0x00008000 0xB000>;
		};
		slot1_partition: partition@13000 {
			label = "image-1";
			reg = <0x00013000 0xB000>;
		};
		scratch_partition: partition@15000 {
			label = "image-scratch";
			reg = <0x00015000 0x2000>;
		};
	};
};

&gpioa {
	status = "okay";
};

&gpiob {
	status = "okay";
};

&gpioc {
	status = "okay";
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_tx_pa10 &uart0_rx_pa11>;
	pinctrl-names = "default";
};

&i2c0 {
	pinctrl-0 = <&i2c0_scl_pa1_pull_up &i2c0_sda_pa0_pull_up>;
	pinctrl-names = "default";
	status = "okay";
};

&adc0 {
	ti,clk-source = <MSP_ADC_CLOCK_ULPCLK>;
	ti,clk-divider = <8>;
	ti,clk-range = <MSP_ADC_CLOCK_RANGE_24TO32>;
	vref-mv = <2500>;
	pinctrl-0 = <&adc0_pa27>;
	pinctrl-names = "default";
	status = "okay";
};

&wdt0 {
	status = "disabled";
}; 

&spi1 {
	pinctrl-0 = <&spi1_sclk_pa17 &spi1_pico_pb8 &spi1_poci_pb7 &spi1_cs0_pb6>;
	pinctrl-names = "default";
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	cs-gpios = <&gpiob 6 (GPIO_ACTIVE_LOW)>;
	ads1310: ads1310@0 {
		compatible = "ti,ads131m02";
		reg = <0>;
		#io-channel-cells = <1>;
		drdy-gpios = <&gpiob 5 (GPIO_ACTIVE_LOW)>;
		spi-max-frequency = <8000000>;
	};
};

&gpt0 {
	status = "okay";
};

&gpt4 {
	status = "okay";
};

&pwm4 {
	status = "okay";
	pinctrl-0 = <&timg4c0_pb2>;
	pinctrl-names = "default";
	ti,cc-index = <0>;
	ti,clk-prescaler = <255>;
	ti,clk-div = <1>;
	ti,cc-mode = "PULSE_WIDTH";
	ti,period = <65535>;
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&timg0c0_pb0>;
	pinctrl-names = "default";
	ti,cc-index = <0>;
	ti,clk-prescaler = <255>;
	ti,clk-div = <1>;
	ti,pwm-mode = "EDGE_ALIGN";
	ti,pulse-cycle = <500>;
	ti,period = <1000>;
};

&pwma0 {
	status = "okay";
	pinctrl-0 = <&tima0c0_pa8>;
	pinctrl-names = "default";
	ti,cc-index = <0>;
	ti,clk-prescaler = <9>;
	ti,clk-div = <1>;
	ti,pwm-mode = "CENTER_ALIGN";
	ti,pulse-cycle = <3>;
	ti,period = <10>;
};

&rtc0 {
	status = "okay";
};
