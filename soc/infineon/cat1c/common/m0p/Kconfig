config INFINEON_CAT1C_M0PLUS
	bool
	select ARM
	select CPU_CORTEX_M0PLUS
	select CPU_CORTEX_M_HAS_SYSTICK
	select CPU_HAS_ARM_MPU
	select CPU_CORTEX_M_HAS_VTOR
	select ARM_CUSTOM_INTERRUPT_CONTROLLER
	select SOC_PREP_HOOK

config INFINEON_CAT1C_START_M7_0
	bool "Infineon M7 Core 0 during M0+ startup"
	default y
	help
	  Enable starting M7 core 0 from M0+ core.

config INFINEON_CAT1C_START_M7_1
	bool "Infineon M7 Core 1 during M0+ startup"
	default y
	help
	  Enable starting M7 core 1 from M0+ core.1