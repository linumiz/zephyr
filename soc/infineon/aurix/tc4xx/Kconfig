config SOC_SERIES_TC4XX
	select TRICORE
	select CPU_TC18
	select CPU_HAS_FPU if SOC_TC4XX_CORECPU
	select CPU_HAS_FPU_DOUBLE_PRECISION if SOC_TC4XX_CORECPU
	select CPU_HAS_TRICORE_VIRTUALIZATION if SOC_TC4XX_CORECPU
	select CPU_HAS_MPU
	select TC_IR
	select HAS_INFINEON_TC4XX_HAL

config SOC_TC4XX_CSCPU
	bool
	default y if TRICORE_CORE_ID = 6
	default n

config SOC_TC4XX_CORECPU
	bool
	default y if TRICORE_CORE_ID < 6
	default n
